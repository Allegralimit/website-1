---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Portfolio — ${SITE_TITLE}`} description="A selection of projects and work I'm proud of." />
	</head>
	<body>
		<Header />
		<main>
			<section class="page-header">
				<h1>Portfolio</h1>
				<p>A selection of projects and work I'm proud of.</p>
			</section>

			<div class="portfolio-grid">
				<div class="portfolio-item">
					<h3>Project One</h3>
					<span class="tags">Tag • Tag • Tag</span>
					<p>Brief description of the project — what it is, what you did, and the outcome.</p>
				</div>
				<div class="portfolio-item">
					<h3>Project Two</h3>
					<span class="tags">Tag • Tag • Tag</span>
					<p>Brief description of the project — what it is, what you did, and the outcome.</p>
				</div>
				<div class="portfolio-item">
					<h3>Project Three</h3>
					<span class="tags">Tag • Tag • Tag</span>
					<p>Brief description of the project — what it is, what you did, and the outcome.</p>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	.page-header {
		padding: 3rem 0 2rem;
		border-bottom: 1px solid rgb(var(--gray-light));
		margin-bottom: 2rem;
	}
	.page-header h1 {
		font-size: 2rem;
	}
	.page-header p {
		color: rgb(var(--gray));
		margin-top: 0.5rem;
	}
	.portfolio-item {
		padding: 1.5rem 0;
		border-bottom: 1px solid rgb(var(--gray-light));
	}
	.portfolio-item h3 {
		font-size: 1.2rem;
		margin-bottom: 0.3rem;
	}
	.tags {
		font-size: 0.85rem;
		color: rgb(var(--gray));
		display: block;
		margin-bottom: 0.5rem;
	}
	.portfolio-item p {
		color: rgb(var(--gray));
	}
</style>
